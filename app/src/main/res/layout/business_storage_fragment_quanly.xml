        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ly_storage_quanlynhap"
            android:orientation="vertical"
            android:background="@color/light_red"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lb_storage_quanlynhaphang"
                android:text="Quản lý nhập hàng"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_storage_nhaphang"
                android:background="@drawable/business_shape_white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/ly_storage_quanlykho"
            android:orientation="vertical"
            android:background="@color/light_green"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lb_storage_quanlykho"
                android:text="Quản lý kho"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@color/teal_700"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/lb_storage_xuathang"
                    android:layout_weight="1"
                    android:text="Xuất hàng"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/lb_storage_nhaphang"
                    android:layout_weight="1"
                    android:text="Nhâp hàng"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@drawable/business_shape_white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lb_storage_quanly_ngaybd"
                    android:text="Tu"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/date_storage_quanly_datestart"
                    android:text="DD/MM/YYYY"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lb_storage_quanly_ngaykt"
                    android:text="Den"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/date_storage_quanly_dateend"
                    android:text="DD/MM/YYYY"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lb_storage_quanly_trongngay"
                android:text="DD/MM/YYYY"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_storage_kho"
                android:background="@drawable/business_shape_white"/>

        </LinearLayout>

</LinearLayout>