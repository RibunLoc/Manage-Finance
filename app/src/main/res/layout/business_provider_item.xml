<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/provider_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã nhà cc"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nhà cc"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số sp cc"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đại diện"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hợp tác"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tình trạng"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/provider_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi chú"
        android:textColor="@android:color/black" />
</LinearLayout>
